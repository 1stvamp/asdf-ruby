#!/usr/bin/env bash

ruby_versions=$(
  curl --silent -H "Content-Type:text/html" "http://cache.ruby-lang.org/pub/ruby/" \
    | sed -n -E 's/^.*"(ruby-)(.*).tar.gz".*$/\2/p' \
    | sort \
    | uniq
)

jruby_versions=(
  jruby-9.0.4.0
)

for version in "${ruby_versions[@]} ${jruby_versions[@]}"
do
  versions="${versions} ${version}"
done

echo $versions
